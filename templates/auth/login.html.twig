{% extends "base.html.twig" %}

{% block title %}{{ 'auth.login.title'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">ğŸ” {{ 'auth.login.title'|trans }}</h2>

                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form method="post" action="{{ path('app_auth_login_check') }}">
                    <div class="mb-3">
                        <label for="username" class="form-label">{{ 'auth.login.email'|trans }}</label>
                        <input
                            type="email"
                            id="username"
                            name="_username"
                            class="form-control"
                            value="{{ last_username }}"
                            required
                            autofocus
                        >
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">{{ 'auth.login.password'|trans }}</label>
                        <input
                            type="password"
                            id="password"
                            name="_password"
                            class="form-control"
                            required
                        >
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button type="submit" class="btn btn-primary w-100">
                        {{ 'auth.login.submit'|trans }}
                    </button>
                </form>

                <hr>

                <p class="text-center">
                    {{ 'auth.login.not_registered'|trans }}
                    <a href="{{ path('app_auth_register') }}">{{ 'auth.login.create_account'|trans }}</a>
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
