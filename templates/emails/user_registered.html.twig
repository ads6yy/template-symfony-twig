<!DOCTYPE html>
<html lang="{{ locale }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }
        .header {
            background-color: #28a745;
            color: white;
            padding: 20px;
            text-align: center;
            border-radius: 5px 5px 0 0;
        }
        .content {
            background-color: #f8f9fa;
            padding: 30px;
            border-radius: 0 0 5px 5px;
        }
        .user-info {
            background-color: white;
            padding: 15px;
            border-radius: 5px;
            margin: 20px 0;
        }
        .footer {
            text-align: center;
            margin-top: 20px;
            font-size: 12px;
            color: #6c757d;
        }
        .cta-button {
            display: inline-block;
            padding: 12px 24px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>{{ 'email.user_registered.title'|trans({}, 'messages', locale) }}</h1>
    </div>
    <div class="content">
        <p>{{ 'email.user_registered.greeting'|trans({'%name%': user.firstName ?: user.email}, 'messages', locale) }}</p>

        <p>{{ 'email.user_registered.message'|trans({}, 'messages', locale) }}</p>

        <div class="user-info">
            <p><strong>{{ 'form.email.label'|trans({}, 'messages', locale) }}:</strong> {{ user.email }}</p>
            {% if user.firstName %}
                <p><strong>{{ 'form.first_name.label'|trans({}, 'messages', locale) }}:</strong> {{ user.firstName }}</p>
            {% endif %}
            {% if user.lastName %}
                <p><strong>{{ 'form.last_name.label'|trans({}, 'messages', locale) }}:</strong> {{ user.lastName }}</p>
            {% endif %}
        </div>

        <p>{{ 'email.user_registered.next_steps'|trans({}, 'messages', locale) }}</p>

        <p>{{ 'email.user_registered.footer'|trans({}, 'messages', locale) }}</p>
    </div>
    <div class="footer">
        <p>{{ 'footer.copyright'|trans({}, 'messages', locale) }}</p>
    </div>
</body>
</html>

