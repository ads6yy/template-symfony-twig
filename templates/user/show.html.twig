{% extends "base.html.twig" %}

{% block title %}Profile - {{ parent() }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">ğŸ‘¤ User Profile</h2>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">
                        <strong>{{ user.email }}</strong>
                    </dd>

                    <dt class="col-sm-3">First Name</dt>
                    <dd class="col-sm-9">
                        {{ user.firstName ?: 'â€”' }}
                    </dd>

                    <dt class="col-sm-3">Last Name</dt>
                    <dd class="col-sm-9">
                        {{ user.lastName ?: 'â€”' }}
                    </dd>

                    <dt class="col-sm-3">Roles</dt>
                    <dd class="col-sm-9">
                        {% for role in user.roles %}
                            <span class="badge bg-info">{{ role }}</span>
                        {% endfor %}
                    </dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        {% if user.isActive %}
                            <span class="badge bg-success">Active</span>
                        {% else %}
                            <span class="badge bg-secondary">Inactive</span>
                        {% endif %}
                    </dd>

                    <dt class="col-sm-3">Created At</dt>
                    <dd class="col-sm-9">
                        {{ user.createdAt|date('m/d/Y H:i') }}
                    </dd>

                    <dt class="col-sm-3">Updated At</dt>
                    <dd class="col-sm-9">
                        {{ user.updatedAt|date('m/d/Y H:i') }}
                    </dd>
                </dl>
            </div>
        </div>

        <div class="mt-4">
            {% if app.user.id == user.id or is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_user_edit', {id: user.id}) }}" class="btn btn-warning">
                    âœï¸ Edit
                </a>
                <a href="{{ path('app_user_change_password', {id: user.id}) }}" class="btn btn-info">
                    ğŸ” Change Password
                </a>
            {% endif %}

            {% if is_granted('ROLE_ADMIN') and app.user.id != user.id %}
                <form method="post" action="{{ path('app_user_delete', {id: user.id}) }}"
                      style="display:inline;"
                      onsubmit="return confirm('Are you sure you want to delete this user?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                    <button type="submit" class="btn btn-danger">
                        ğŸ—‘ï¸ Delete
                    </button>
                </form>

                <form method="post" action="{{ path('app_user_toggle_active', {id: user.id}) }}"
                      style="display:inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ user.id) }}">
                    <button type="submit" class="btn {{ user.isActive ? 'btn-secondary' : 'btn-success' }}">
                        {{ user.isActive ? 'âŒ Deactivate' : 'âœ… Activate' }}
                    </button>
                </form>
            {% endif %}

            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
                â† Back
            </a>
        </div>
    </div>
</div>
{% endblock %}

