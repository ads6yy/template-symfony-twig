{% extends "base.html.twig" %}

{% block title %}Profil - {{ parent() }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">üë§ Profil Utilisateur</h2>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">
                        <strong>{{ user.email }}</strong>
                    </dd>

                    <dt class="col-sm-3">Pr√©nom</dt>
                    <dd class="col-sm-9">
                        {{ user.firstName ?: '‚Äî' }}
                    </dd>

                    <dt class="col-sm-3">Nom</dt>
                    <dd class="col-sm-9">
                        {{ user.lastName ?: '‚Äî' }}
                    </dd>

                    <dt class="col-sm-3">R√¥les</dt>
                    <dd class="col-sm-9">
                        {% for role in user.roles %}
                            <span class="badge bg-info">{{ role }}</span>
                        {% endfor %}
                    </dd>

                    <dt class="col-sm-3">Statut</dt>
                    <dd class="col-sm-9">
                        {% if user.isActive %}
                            <span class="badge bg-success">Actif</span>
                        {% else %}
                            <span class="badge bg-secondary">Inactif</span>
                        {% endif %}
                    </dd>

                    <dt class="col-sm-3">Cr√©√© le</dt>
                    <dd class="col-sm-9">
                        {{ user.createdAt|date('d/m/Y H:i') }}
                    </dd>

                    <dt class="col-sm-3">Modifi√© le</dt>
                    <dd class="col-sm-9">
                        {{ user.updatedAt|date('d/m/Y H:i') }}
                    </dd>
                </dl>
            </div>
        </div>

        <div class="mt-4">
            {% if app.user.id == user.id or is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_user_edit', {id: user.id}) }}" class="btn btn-warning">
                    ‚úèÔ∏è Modifier
                </a>
            {% endif %}

            {% if is_granted('ROLE_ADMIN') and app.user.id != user.id %}
                <form method="post" action="{{ path('app_user_delete', {id: user.id}) }}"
                      style="display:inline;"
                      onsubmit="return confirm('√ätes-vous s√ªr de supprimer cet utilisateur ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                    <button type="submit" class="btn btn-danger">
                        üóëÔ∏è Supprimer
                    </button>
                </form>

                <form method="post" action="{{ path('app_user_toggle_active', {id: user.id}) }}"
                      style="display:inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ user.id) }}">
                    <button type="submit" class="btn {{ user.isActive ? 'btn-secondary' : 'btn-success' }}">
                        {{ user.isActive ? '‚ùå D√©sactiver' : '‚úÖ Activer' }}
                    </button>
                </form>
            {% endif %}

            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
                ‚Üê Retour
            </a>
        </div>
    </div>
</div>
{% endblock %}

