{% extends "base.html.twig" %}

{% block title %}{{ 'user.management.title'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col">
        <h1>ğŸ‘¥ {{ 'user.management.title'|trans }}</h1>
    </div>
    <div class="col-auto">
        <a href="{{ path('app_user_new') }}" class="btn btn-success">
            â• {{ 'user.management.add_user'|trans }}
        </a>
    </div>
</div>

{% if users|length > 0 %}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>{{ 'user.list.email'|trans }}</th>
                    <th>{{ 'user.list.full_name'|trans }}</th>
                    <th>{{ 'user.list.roles'|trans }}</th>
                    <th>{{ 'user.list.status'|trans }}</th>
                    <th>{{ 'user.list.created_at'|trans }}</th>
                    <th>{{ 'user.list.actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>
                            <strong>{{ user.email }}</strong>
                        </td>
                        <td>
                            {{ user.fullName ?: 'â€”' }}
                        </td>
                        <td>
                            {% for role in user.roles %}
                                <span class="badge bg-info">{{ role }}</span>
                            {% endfor %}
                        </td>
                        <td>
                            {% if user.accountStatus.isActive() %}
                                <span class="badge bg-success">{{ 'user.status.active'|trans }}</span>
                            {% else %}
                                <span class="badge bg-secondary">{{ ('user.status.' ~ user.accountStatus.value)|trans }}</span>
                            {% endif %}
                        </td>
                        <td>
                            {{ user.createdAt|localized_datetime }}
                        </td>
                        <td>
                            <a href="{{ path('app_user_show', {id: user.id}) }}" class="btn btn-sm btn-info">
                                ğŸ‘ï¸ {{ 'user.actions.view'|trans }}
                            </a>
                            <a href="{{ path('app_user_edit', {id: user.id}) }}" class="btn btn-sm btn-warning">
                                âœï¸ {{ 'user.actions.edit'|trans }}
                            </a>
                            <form method="post" action="{{ path('app_user_delete', {id: user.id}) }}"
                                  style="display:inline;"
                                  onsubmit="return confirm('{{ 'user.actions.confirm_delete'|trans }}');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    ğŸ—‘ï¸ {{ 'user.actions.delete'|trans }}
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <div class="alert alert-info">
        <strong>{{ 'user.list.no_users'|trans }}</strong>
        <a href="{{ path('app_user_new') }}">{{ 'user.list.create_first'|trans }}</a>
    </div>
{% endif %}
{% endblock %}
