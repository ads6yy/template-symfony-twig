{% extends "base.html.twig" %}

{% block title %}User Management - {{ parent() }}{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col">
        <h1>ğŸ‘¥ User Management</h1>
    </div>
    <div class="col-auto">
        <a href="{{ path('app_user_new') }}" class="btn btn-success">
            â• Add User
        </a>
    </div>
</div>

{% if users|length > 0 %}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Email</th>
                    <th>Full Name</th>
                    <th>Roles</th>
                    <th>Status</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>
                            <strong>{{ user.email }}</strong>
                        </td>
                        <td>
                            {{ user.fullName ?: 'â€”' }}
                        </td>
                        <td>
                            {% for role in user.roles %}
                                <span class="badge bg-info">{{ role }}</span>
                            {% endfor %}
                        </td>
                        <td>
                            {% if user.isActive %}
                                <span class="badge bg-success">Active</span>
                            {% else %}
                                <span class="badge bg-secondary">Inactive</span>
                            {% endif %}
                        </td>
                        <td>
                            {{ user.createdAt|date('m/d/Y H:i') }}
                        </td>
                        <td>
                            <a href="{{ path('app_user_show', {id: user.id}) }}" class="btn btn-sm btn-info">
                                ğŸ‘ï¸ View
                            </a>
                            <a href="{{ path('app_user_edit', {id: user.id}) }}" class="btn btn-sm btn-warning">
                                âœï¸ Edit
                            </a>
                            <form method="post" action="{{ path('app_user_delete', {id: user.id}) }}"
                                  style="display:inline;"
                                  onsubmit="return confirm('Are you sure?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    ğŸ—‘ï¸ Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <div class="alert alert-info">
        <strong>No users found.</strong>
        <a href="{{ path('app_user_new') }}">Create the first user</a>
    </div>
{% endif %}
{% endblock %}

